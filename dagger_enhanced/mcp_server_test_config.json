{
  "servers": {
    "shrimp-task-manager": {
      "command": "node",
      "args": ["dist/index.js"],
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "mcp:*",
        "ENABLE_GUI": "false",
        "DATA_DIR": "./test-data"
      },
      "timeout": 30,
      "retry_attempts": 3,
      "working_directory": "/Users/tosinakinosho/workspace/mcp-shrimp-task-manager"
    },
    "shrimp-task-manager-dev": {
      "command": "npx",
      "args": ["ts-node", "src/index.ts"],
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "mcp:*",
        "ENABLE_GUI": "false",
        "DATA_DIR": "./test-data"
      },
      "timeout": 30,
      "retry_attempts": 3,
      "working_directory": "/Users/tosinakinosho/workspace/mcp-shrimp-task-manager"
    }
  },
  "testing": {
    "functional": {
      "enabled": true,
      "test_tools": true,
      "test_resources": true,
      "test_prompts": true,
      "timeout": 15,
      "custom_tests": [
        "test_plan_task",
        "test_analyze_task",
        "test_split_tasks",
        "test_list_tasks",
        "test_execute_task",
        "test_verify_task"
      ]
    },
    "security": {
      "enabled": true,
      "test_authentication": false,
      "test_authorization": false,
      "test_input_validation": true,
      "malicious_payloads": true,
      "custom_security_tests": [
        "test_task_data_validation",
        "test_file_system_access",
        "test_environment_isolation"
      ]
    },
    "performance": {
      "enabled": true,
      "benchmark_tools": true,
      "concurrent_connections": 10,
      "test_duration": 120,
      "memory_monitoring": true,
      "resource_limits": {
        "max_memory_mb": 512,
        "max_cpu_percent": 80,
        "max_response_time_ms": 2000
      },
      "load_testing": {
        "ramp_up_duration": 30,
        "steady_state_duration": 60,
        "ramp_down_duration": 30
      }
    },
    "integration": {
      "enabled": true,
      "test_tool_chain": true,
      "test_task_dependencies": true,
      "test_workflow_scenarios": true,
      "scenarios": [
        "complete_task_lifecycle",
        "parallel_task_execution",
        "error_recovery_workflow"
      ]
    }
  },
  "confidence_thresholds": {
    "minimum_pass": 85,
    "high_confidence": 95,
    "security_minimum": 90,
    "performance_minimum": 80,
    "integration_minimum": 85
  },
  "optimization": {
    "parallel_execution": true,
    "max_concurrent_tests": 6,
    "cache_test_results": true,
    "cache_duration": 1800,
    "reuse_connections": true,
    "connection_pooling": {
      "max_connections": 15,
      "idle_timeout": 60
    }
  },
  "tool_validation": {
    "expected_tools": [
      "plan_task",
      "analyze_task", 
      "reflect_task",
      "split_tasks",
      "list_tasks",
      "execute_task",
      "verify_task",
      "delete_task",
      "clear_all_tasks",
      "update_task",
      "query_task",
      "get_task_detail",
      "process_thought",
      "init_project_rules",
      "research_mode"
    ],
    "tool_validation_timeout": 10
  },
  "notifications": {
    "enabled": true,
    "on_failure": true,
    "on_success": false,
    "confidence_threshold": 70,
    "channels": ["console", "file"]
  },
  "debugging": {
    "verbose_logging": true,
    "save_debug_info": true,
    "debug_output_dir": "./test-results",
    "capture_network_traffic": false,
    "profile_performance": true
  }
} 