{
  "mcpServers": {
    "shrimp-task-manager": {
      "command": "node",
      "args": ["dist/index.js"],
      "env": {
        "NODE_ENV": "test",
        "LOG_LEVEL": "info"
      }
    }
  },
  "testing": {
    "timeout": 30,
    "parallel": true,
    "retries": 3,
    "outputFormat": "table"
  },
  "testSuites": {
    "functional": {
      "enabled": true,
      "tests": [
        "server_startup",
        "tool_discovery",
        "task_management",
        "research_mode",
        "project_rules"
      ]
    },
    "security": {
      "enabled": true,
      "tests": [
        "input_validation",
        "authentication",
        "authorization",
        "xss_prevention",
        "injection_protection"
      ]
    },
    "performance": {
      "enabled": true,
      "benchmarks": {
        "task_creation": 1000,
        "task_retrieval": 500,
        "research_mode": 2000
      },
      "concurrency": 5,
      "duration": 60
    },
    "integration": {
      "enabled": true,
      "tests": [
        "web_gui",
        "task_workflow",
        "project_initialization"
      ]
    }
  },
  "reporting": {
    "formats": ["json", "html", "table"],
    "outputDir": "test-results",
    "includeMetrics": true,
    "includeLogs": true
  },
  "confidence": {
    "functional": {
      "threshold": 85,
      "weight": 0.4
    },
    "security": {
      "threshold": 90,
      "weight": 0.3
    },
    "performance": {
      "threshold": 80,
      "weight": 0.2
    },
    "integration": {
      "threshold": 85,
      "weight": 0.1
    }
  }
}
